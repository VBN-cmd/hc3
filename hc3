<body>
    <div class="message" id="ransomware">⚠️ جميع ملفاتك مُشفرة! أرسل الفدية الآن! ⚠️</div>
    <div class="alert-box" id="finalMessage">💀 نظامك في خطر! سيتم تدمير كل شيء! 💀</div>
    <div class="footer-message" id="footerMessage">سرايا القدس نحو القدس</div>
    <div class="error-screen" id="errorScreen">💀 SYSTEM ERROR! <br> Code: 0x000BAD 💀</div>

    <script>
        // إخفاء المؤشر
        document.body.style.cursor = "none";

        // إلغاء زر الفأرة
        document.addEventListener("contextmenu", function(event) {
            event.preventDefault();
        });
        document.addEventListener("mousedown", function(event) {
            event.preventDefault();
        });

        // إخفاء المؤشر بالكامل
        function disableCursor() {
            document.body.style.cursor = 'none';
        }

        // تحريك الشاشة
        function shakeScreen() {
            let intensity = 30;
            let interval = setInterval(() => {
                let x = (Math.random() * intensity * 2) - intensity;
                let y = (Math.random() * intensity * 2) - intensity;
                document.body.style.transform = `translate(${x}px, ${y}px)`;
            }, 50);
            setTimeout(() => {
                clearInterval(interval);
                document.body.style.transform = "translate(0, 0)";
            }, 25000);
        }

        // محاكاة اختراق
        function fakeHacking() {
            let texts = [
                "تحميل بيانات النظام...",
                "اختراق الحماية...",
                "السيطرة على الجهاز...",
                "سرقة البيانات...",
                "تم إرسال جميع المعلومات!",
                "جهازك مُدمر بالكامل!",
                "أنت الآن تحت السيطرة الكاملة!"
            ];
            let i = 0;
            let interval = setInterval(() => {
                if (i < texts.length) {
                    console.log(texts[i]);
                    i++;
                } else {
                    clearInterval(interval);
                }
            }, 800);
        }

        // تشغيل الصوت
        function playSound() {
            let audio = new Audio('https://www.myinstants.com/media/sounds/scream.mp3');
            audio.play();
        }

        // ظهور الرسالة
        function showFakeVirus() {
            document.getElementById("ransomware").style.display = "block";
            shakeScreen();
            fakeHacking();
            playSound();
        }

        // ظهور الرسالة النهائية
        function showFinalMessage() {
            document.getElementById("finalMessage").style.display = "block";
            shakeScreen();
            playSound();
        }

        // التحكم في المتصفح
        function browserControl() {
            setInterval(() => {
                history.pushState(null, null, location.href);
                alert("⚠️ تحكم كامل بالنظام! لا مهرب لك! ⚠️");
                document.body.style.backgroundColor = document.body.style.backgroundColor === 'black' ? 'red' : 'black';
                document.title = "❌ اختراق كامل ❌";
            }, 4000);
        }

        // شاشة الزرقاء
        function fakeBlueScreen() {
            document.body.innerHTML = "<h1 style='color:blue; font-size:50px;'>SYSTEM ERROR!<br>Code: 0x000BAD</h1>";
            document.body.style.backgroundColor = "blue";
        }

        // شاشة الموت
        function showDeathScreen() {
            document.body.innerHTML = "<h1 style='color:red; font-size:50px;'>💀 انتهى أمرك! 💀</h1>";
            document.body.style.backgroundColor = "black";
        }

        // إظهار شاشة خطأ مرعبة بعد 6 ثواني
        setTimeout(() => {
            document.getElementById("errorScreen").style.display = "block";
            shakeScreen();
            playSound();
        }, 6000);

        // تشغيل كافة التأثيرات
        disableCursor();
        setTimeout(showFakeVirus, 2000);
        setTimeout(showFinalMessage, 10500);
        setTimeout(browserControl, 3000);
        setTimeout(fakeBlueScreen, 20000);
        setTimeout(showDeathScreen, 8000);
    </script>
</body>
