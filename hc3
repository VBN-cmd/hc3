    <title>⚠️ جهازك تحت السيطرة ⚠️</title>
    <style>
        body {
            background-color: black;
            color: red;
            text-align: center;
            font-family: 'Courier New', monospace;
            overflow: hidden;
            cursor: none;
            user-select: none;
            height: 100vh;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
        }

        .message {
            font-size: 28px;
            display: none;
            animation: flicker 0.8s infinite alternate;
        }

        .alert-box {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: red;
            color: white;
            padding: 25px;
            font-size: 22px;
            font-weight: bold;
            display: none;
            border-radius: 10px;
            animation: glitch 0.1s infinite;
        }

        .footer-message {
            position: fixed;
            bottom: 0;
            width: 100%;
            background-color: black;
            color: green;
            font-size: 18px;
            padding: 10px 0;
            text-align: center;
            font-weight: bold;
            animation: flicker 1s infinite alternate;
            z-index: 9999;
            pointer-events: none;
        }

        @keyframes flicker {
            0% { opacity: 1; }
            50% { opacity: 0.2; }
            100% { opacity: 1; }
        }

        @keyframes glitch {
            0% { transform: translate(-50%, -50%) skew(3deg, 3deg); }
            50% { transform: translate(-50%, -50%) skew(-3deg, -3deg); }
            100% { transform: translate(-50%, -50%) skew(3deg, 3deg); }
        }

        .error-screen {
            display: none;
